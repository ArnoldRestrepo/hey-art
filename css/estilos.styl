  margin: 0 auto

.contenedor footer
  width: 100%
  height: auto
  margin-top: 40px
  background: #3a3539
  padding-top: 40px

.contenedor footer article.contacto
  width: 85%
  margin: 0 auto

.contenedor footer article.contacto h2
  color: #fff
  margin-bottom: 20px

.contenedor footer article.contacto p
  color: #fff
  margin-bottom: 20px

.contenedor footer article.contacto form
  width: 100%
  min-width: 50%
  margin: 0 auto

.contenedor footer article.contacto form input:required:invalid
  border-bottom: 1px solid red

.contenedor footer article.contacto form input:required:valid
  border-bottom: 1px solid darkgreen

.contenedor footer article.contacto form input[type="text"],
.contenedor footer article.contacto form input[type="email"]
  width: 45%
  padding: 20px 0px
  margin-left: 4%
  display: inline-block
  background: transparent
  border: 0
  color: #fff
  font-size: 1.3em
  border-bottom: 1px solid #fff
  outline: none

.contenedor footer article.contacto form textarea
  width: 95%
  padding: 20px 0px
  margin-left: 4%
  display: inline-block
  background: transparent
  border: 0
  color: #fff
  border-bottom: 1px solid #fff
  outline: none
  font-family: 'Open Sans', sans-serif
  font-size: 1.3em

.contenedor footer article.contacto form input[type="submit"]
  background: #1FCE6D
  border: 0
  margin: 4%
  text-align: center
  width: 95%
  height: 50px
  border-radius: 3px
  color: #fff
  font-size: 1.5em
  cursor: pointer
  transition: background 0.3s ease-in-out

.contenedor footer article.contacto form input[type="submit"]:hover
  background: #16aa56
  animation-name: shake

.contenedor footer article.derechos
  width: 85%
  margin: 0 auto
  padding: 40px 0px

.contenedor footer article.derechos img
  width: 15%
  display: inline-block
  float: left

.contenedor footer article.derechos p
  width: 75%
  display: inline-block
  color: #fff
  line-height: 1.3
  margin-left: 10px
  font-size: 1em

.contenedor footer article.derechos a
  color: #fff

