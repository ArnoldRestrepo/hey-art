.contenedor header
  width: 100%
  height: 100px
  position: fixed
  /* Para que se quede pegado*/
  top: 0
  left: 0
  z-index: 10
  background: #522375
  box-sizing: border-box
  box-shadow: 0px 3px 10px 0px rgba(0, 0, 0, 0.7)
  /*Logotipo*/
  /*Navegaci├│n*/
  /*Navegaci├│n*/

.contenedor header figure.logo
  float: left
  padding: 20px 100px

.contenedor header figure.logo img
  width: 200px

.contenedor header .menu-colapsado
  transition: all .25s
  position: fixed
  top: 20px
  right: 10px
  height: 40px
  width: 40px
  z-index: 1
  cursor: pointer

.contenedor header .menu-colapsado ul
  transition: all .6s
  position: fixed
  left: -9000px

.contenedor header .hamburguesa
  position: fixed
  right: 60px
  top: 45px
  height: 6px
  width: 40px
  border-radius: 15px
  background-color: rgba(255, 255, 255, 0.75)

.contenedor header .hamburguesa:before
  transition: all .25s
  content: ""
  position: absolute
  left: 0
  top: -10px
  height: 6px
  width: 40px
  border-radius: 15px
  background-color: rgba(255, 255, 255, 0.75)

.contenedor header .hamburguesa:after
  transition: all .25s
  content: ""
  position: absolute
  left: 0
  top: 10px
  height: 6px
  width: 40px
  border-radius: 15px
  background-color: rgba(255, 255, 255, 0.75)

.contenedor header .menu-expansion
  transition: all .25s
  text-align: center
  line-height: 110px
  height: 100%
  width: 100%
  border-radius: 0px
  top: 0
  right: 0
  background-color: rgba(0, 0, 0, 0.85)

.contenedor header .menu-expansion ul
  transition: all .05s
  position: relative
  overflow-y: visible
  left: 0
  z-index: 2

.contenedor header .menu-expansion a
  transition: all .15s
  text-decoration: none
  color: white
  font-size: 2em
  padding: 5px

.contenedor header .menu-expansion a:hover
  transition: all .15s
  letter-spacing: 2px
  border: 1px solid rgba(82, 35, 255, 0.15)

.contenedor header .menu-expansion .hamburguesa
  background-color: transparent
  transition: all .25s

.contenedor header .menu-expansion .hamburguesa:before
  transition: all .25s
  content: ""
  transform: rotate(45deg)
  top: -0px

.contenedor header .menu-expansion .hamburguesa:after
  transition: all .25s
  content: ""
  transform: rotate(-45deg)
  top: 0px

.contenedor .inicio
  width: 100%
  height: 650px
  margin-top: 100px
  margin-bottom: 40px
  background-image: url(../img/FONDO.jpg)
  background-repeat: no-repeat
  background-size: cover
